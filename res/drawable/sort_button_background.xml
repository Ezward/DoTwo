<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_selected="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/sort_selected"/>
            <stroke android:color="@color/sort_stroke" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_checked="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/sort_selected"/>
            <stroke android:color="@color/sort_stroke" android:width="1dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/sort_pressed"/>
            <stroke android:color="@color/sort_stroke" android:width="1dp"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/sort_background"/>
            <stroke android:color="@color/sort_stroke" android:width="1dp"/>
        </shape>
    </item>

</selector>
