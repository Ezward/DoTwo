<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!--  
    	use background drawable to make the drawable's
    	size large enough for a button (good hit area)
    -->
	<item android:drawable="@drawable/toggle_background"/>
	
	<!-- 
		center-ish image, offset the shadow by 2 dp
		NOTE: corresponding un-checked state needs to have the
		      the same background and same top/left as the
		      shadow (the last item in the layer list)
	-->
    <item 
        android:top="1dp"
        android:left="1dp"
        >
        <bitmap 
            android:src="@drawable/ic_sunshine_off"
			android:gravity="center" 
			/>
    </item>
    <item 
        android:top="-1dp"
        android:left="-1dp"
        >
        <bitmap 
            android:src="@drawable/ic_sunshine_on"
			android:gravity="center" 
			/>
    </item>
</layer-list>
